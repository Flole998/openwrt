/dts-v1/;

#include <dt-bindings/gpio/gpio.h>
#include <dt-bindings/input/input.h>

#include "ar9344.dtsi"

/ {
	model = "TP-Link CPE220 v2";
	compatible = "tplink,tl-cpe220-v2";

	keys {
		compatible = "gpio-keys-polled";
		poll-interval = <20>;

		pinctrl-names = "default";
		pinctrl-0 = <&jtag_disable_pins>;

		reset {
			label = "Reset button";
			linux,code = <KEY_RESTART>;
			gpios = <&gpio 4 GPIO_ACTIVE_LOW>;
			debounce-interval = <60>;
		};
	};

	leds {
		compatible = "gpio-leds";

		lan0 {
			label = "tp-link:green:lan0";
			gpios = <&gpio 11 GPIO_ACTIVE_LOW>;
			default-state = "off";
		};

		lan1 {
			label = "tp-link:green:lan1";
			gpios = <&gpio 12 GPIO_ACTIVE_LOW>;
			default-state = "off";
		};

		link1 {
			label = "tp-link:green:link1";
			gpios = <&gpio 13 GPIO_ACTIVE_LOW>;
			default-state = "off";
		};

		link2 {
			label = "tp-link:green:link2";
			gpios = <&gpio 14 GPIO_ACTIVE_LOW>;
			default-state = "off";
		};

		link3 {
			label = "tp-link:green:link3";
			gpios = <&gpio 15 GPIO_ACTIVE_LOW>;
			default-state = "off";
		};

		link4 {
			label = "tp-link:green:link4";
			gpios = <&gpio 16 GPIO_ACTIVE_LOW>;
			default-state = "off";
		};
	};

	gpio-export {
		compatible = "gpio-export";

		gpio_ext_lna0 {
			gpio-export,name = "tp-link:ext:lna0";
			gpio-export,output = <1>;
			gpios = <&gpio 18 GPIO_ACTIVE_HIGH>;
		};

		gpio_ext_lna1 {
			gpio-export,name = "tp-link:ext:lna1";
			gpio-export,output = <1>;
			gpios = <&gpio 19 GPIO_ACTIVE_HIGH>;
		};
	};
};

&ref {
	clock-frequency = <40000000>;
};

&uart {
	status = "okay";
};

&gpio {
	status = "okay";
};

&spi {
	num-cs = <1>;

	status = "okay";

	flash@0 {
		compatible = "jedec,spi-nor";
		reg = <0>;
		spi-max-frequency = <25000000>;

		partitions {
			compatible = "fixed-partitions";
			#address-cells = <1>;
			#size-cells = <1>;

			partition@0 {
				label = "u-boot";
				reg = <0x000000 0x020000>;
				read-only;
			};

			partition@20000 {
				label = "pation-table";
				reg = <0x020000 0x010000>;
				read-only;
			};

			info: partition@30000 {
				label = "product-info";
				reg = <0x030000 0x010000>;
				read-only;
			};

			partition@40000 {
				label = "firmware";
				reg = <0x040000 0x780000>;
			};

			partition@7c0000 {
				label = "config";
				reg = <0x7c0000 0x030000>;
				read-only;
			};

			ART: partition@7f0000 {
				label = "ART";
				reg = <0x7f0000 0x010000>;
				read-only;
			};
		};
	};
};
			
&mdio1 {
	status = "okay";
};

&eth1 {
	status = "okay";

	phy-mode = "gmii";
	mtd-mac-address = <&info 0x8>;
};

&wmac {
	status = "okay";
	mtd-cal-data = <&ART 0x1000>;
	mtd-mac-address = <&info 0x8>;
};
